            function showToast(message) {
                const toast = document.getElementById("toast");
                toast.innerText = message;
                toast.className = "show";
                setTimeout(function () { toast.className = toast.className.replace("show", ""); }, 3000);
            }

            function copyPreview() {
                const previewElement = document.getElementById('signature-preview');
                const range = document.createRange();
                range.selectNode(previewElement);
                window.getSelection().removeAllRanges();
                window.getSelection().addRange(range);
                try {
                    document.execCommand('copy');
                    showToast("GÃ¶rÃ¼nÃ¼m kopyalandÄ±! (Outlook/Gmail'e yapÄ±ÅŸtÄ±rÄ±n)");
                } catch (err) {
                    alert('Kopyalama baÅŸarÄ±sÄ±z.');
                }
                window.getSelection().removeAllRanges();
            }

            function copySourceCode() {
                const codeBox = document.getElementById('source-code');
                codeBox.select();
                codeBox.setSelectionRange(0, 99999);
                navigator.clipboard.writeText(codeBox.value).then(() => {
                    showToast("HTML Kaynak Kodu kopyalandÄ±!");
                });
            }
